{
  "name": "Python 3.9 Dev Container",
  "image": "up_com139-image:latest",
  // Tells VS Code how to build the container's image.
  "build": {
    "dockerfile": "Dockerfile",
    // The "context" is the parent directory (project root).
    "context": ".."
  },
  "mounts": [
    "source=projectname-bashhistory,target=/commandhistory,type=volume"
  ],

  // Mounts the local project folder into the container at the specified path.
  "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind",

  // Default folder that VS Code will open inside the container.
  "workspaceFolder": "/app",

  // Right before the container has been created, we set the permissions of the post-create script to be executable.
  "postCreateCommand": "/bin/bash .devcontainer/post-create.sh",
  
  "customizations": {
    "vscode": {
      "settings": {
        
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true,
        "python.languageServer": "Pylance",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.linting.pycodestyleEnabled": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      // List of extensions to install automatically inside the container.
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "remoteUser": "com139-user"
}